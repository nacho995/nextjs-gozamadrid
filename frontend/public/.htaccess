# Configuración para servir archivos estáticos correctamente
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Asegurar que las imágenes se sirvan con los headers correctos
    <FilesMatch "\.(png|jpg|jpeg|gif|svg|webp)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
    
    # Forzar tipo MIME correcto para imágenes
    <FilesMatch "\.png$">
        ForceType image/png
    </FilesMatch>
    
    <FilesMatch "\.jpg$">
        ForceType image/jpeg
    </FilesMatch>
    
    <FilesMatch "\.jpeg$">
        ForceType image/jpeg
    </FilesMatch>
    
    # Asegurar que logonuevo.png se sirva correctamente
    RewriteRule ^logonuevo\.png$ logonuevo.png [L]
    RewriteRule ^logo\.png$ logo.png [L]
</IfModule>

# Configuración de tipos MIME
<IfModule mod_mime.c>
    AddType image/png .png
    AddType image/jpeg .jpg .jpeg
    AddType image/gif .gif
    AddType image/svg+xml .svg
    AddType image/webp .webp
</IfModule> 