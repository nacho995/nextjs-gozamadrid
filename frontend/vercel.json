{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "public": true,
  "env": {
    "NEXT_PUBLIC_WP_API_URL": "https://wordpress.realestategozamadrid.com/wp-json/wp/v2",
    "NEXT_PUBLIC_WC_API_URL": "https://wordpress.realestategozamadrid.com/wp-json/wc/v3",
    "NEXT_PUBLIC_API_URL": "http://api.realestategozamadrid.com",
    "NEXT_PUBLIC_API_TIMEOUT": "10000",
    "NEXT_PUBLIC_MAX_RETRIES": "5",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_USE_HTTP_FOR_API": "true",
    "NEXT_PUBLIC_API_PROTOCOL": "http"
  },
  "crons": [
    {
      "path": "/api/enviar-emails-diarios",
      "schedule": "0 10 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico|webp)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "image/*"
        }
      ]
    },
    {
      "source": "/logonuevo.png",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "image/png"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/logonuevo.png",
      "destination": "/logonuevo.png"
    },
    {
      "source": "/logo.png", 
      "destination": "/logo.png"
    },
    {
      "source": "/manifest.json",
      "destination": "/manifest.json"
    }
  ]
}
