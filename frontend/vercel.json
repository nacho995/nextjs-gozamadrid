{
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm install && npm run build",
  "installCommand": "cd frontend && npm install",
  "outputDirectory": "frontend/.next",
  "regions": ["fra1"],
  "cleanUrls": true,
  "github": {
    "silent": true
  },
  "trailingSlash": false,
  "routes": [
    { "handle": "filesystem" },
    { "src": "/css/(.*)", "dest": "/_next/static/css/$1" },
    { "src": "/_next/static/(.*)", "dest": "/_next/static/$1", "headers": { "cache-control": "public,max-age=31536000,immutable" } },
    { "src": "/static/(.*)", "dest": "/static/$1", "headers": { "cache-control": "public,max-age=31536000,immutable" } },
    { "src": "/(.*)\\.(.+)", "dest": "/$1.$2" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}