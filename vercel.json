{
  "version": 2,
  "buildCommand": "cd frontend && npm install next@14.0.0 && npm run build",
  "installCommand": "cd frontend && npm install next@14.0.0 --save",
  "outputDirectory": "frontend/.next",
  "env": {
    "NEXT_PUBLIC_WP_API_URL": "https://wordpress-1430059-5339263.cloudwaysapps.com/wp-json/wp/v2",
    "NEXT_PUBLIC_WC_API_URL": "https://wordpress-1430059-5339263.cloudwaysapps.com/wp-json/wc/v3",
    "NEXT_PUBLIC_API_URL": "https://gozamadrid-api-prod.eba-adypnjgx.eu-west-3.elasticbeanstalk.com",
    "NEXT_PUBLIC_API_TIMEOUT": "60000",
    "NEXT_PUBLIC_MAX_RETRIES": "5",
    "WOO_COMMERCE_KEY": "${WOO_COMMERCE_KEY}",
    "WOO_COMMERCE_SECRET": "${WOO_COMMERCE_SECRET}"
  },
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/proxy/wordpress/(.*)",
      "dest": "https://wordpress-1430059-5339263.cloudwaysapps.com/wp-json/wp/v2/$1"
    },
    {
      "src": "/api/proxy/woocommerce/(.*)",
      "dest": "https://wordpress-1430059-5339263.cloudwaysapps.com/wp-json/wc/v3/$1?consumer_key=${WOO_COMMERCE_KEY}&consumer_secret=${WOO_COMMERCE_SECRET}"
    },
    {
      "src": "/api/properties",
      "dest": "https://gozamadrid-api-prod.eba-adypnjgx.eu-west-3.elasticbeanstalk.com/api/properties"
    },
    {
      "src": "/api/properties/sources/woocommerce",
      "dest": "https://gozamadrid-api-prod.eba-adypnjgx.eu-west-3.elasticbeanstalk.com/api/properties/sources/woocommerce"
    },
    {
      "src": "/api/properties/sources/mongodb",
      "dest": "https://gozamadrid-api-prod.eba-adypnjgx.eu-west-3.elasticbeanstalk.com/api/properties/sources/mongodb"
    },
    {
      "src": "/api/properties/(.*)",
      "dest": "https://gozamadrid-api-prod.eba-adypnjgx.eu-west-3.elasticbeanstalk.com/api/properties/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS, HEAD, PATCH",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept, Authorization, Cache-Control, Pragma, x-skip-head-check",
        "Cache-Control": "no-store, must-revalidate"
      }
    }
  ],
  "regions": ["fra1"]
} 