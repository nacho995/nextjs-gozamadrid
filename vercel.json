{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "env": {
    "NEXT_PUBLIC_WP_API_URL": "https://wordpress.realestategozamadrid.com/wp-json/wp/v2",
    "NEXT_PUBLIC_WC_API_URL": "https://wordpress.realestategozamadrid.com/wp-json/wc/v3",
    "NEXT_PUBLIC_API_URL": "http://api.realestategozamadrid.com",
    "NEXT_PUBLIC_API_TIMEOUT": "10000",
    "NEXT_PUBLIC_MAX_RETRIES": "5",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_USE_HTTP_FOR_API": "true",
    "NEXT_PUBLIC_API_PROTOCOL": "http"
  },
  "crons": [
    {
      "path": "/api/enviar-emails-diarios",
      "schedule": "0 10 * * *"
    }
  ],
  "functions": {
    "frontend/src/pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/video.mp4",
      "destination": "/video.mp4"
    },
    {
      "source": "/videoExpIngles.mp4", 
      "destination": "/videoExpIngles.mp4"
    },
    {
      "source": "/madrid.jpg",
      "destination": "/madrid.jpg"
    },
    {
      "source": "/favicon.ico",
      "destination": "/favicon.ico"
    },
    {
      "source": "/manifest.json",
      "destination": "/manifest.json"
    },
    {
      "source": "/icon.svg",
      "destination": "/icon.svg"
    },
    {
      "source": "/logopestana.png",
      "destination": "/logopestana.png"
    },
    {
      "source": "/agenteinmo.png",
      "destination": "/agenteinmo.png"
    },
    {
      "source": "/analisis.png",
      "destination": "/analisis.png"
    },
    {
      "source": "/analisisdemercado.jpeg",
      "destination": "/analisisdemercado.jpeg"
    },
    {
      "source": "/acuerdosyconvenios.jpg",
      "destination": "/acuerdosyconvenios.jpg"
    },
    {
      "source": "/inicio.jpg",
      "destination": "/inicio.jpg"
    },
    {
      "source": "/guia.jpg",
      "destination": "/guia.jpg"
    },
    {
      "source": "/formFoto.jpeg",
      "destination": "/formFoto.jpeg"
    },
    {
      "source": "/gozamadridwp.jpg",
      "destination": "/gozamadridwp.jpg"
    },
    {
      "source": "/exp-gold.gif",
      "destination": "/exp-gold.gif"
    },
    {
      "source": "/css/styles.css",
      "destination": "/css/styles.css"
    },
    {
      "source": "/video-diagnostic.js",
      "destination": "/video-diagnostic.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/video.mp4",
      "headers": [
        {
          "key": "Content-Type",
          "value": "video/mp4"
        },
        {
          "key": "Accept-Ranges",
          "value": "bytes"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/videoExpIngles.mp4",
      "headers": [
        {
          "key": "Content-Type",
          "value": "video/mp4"
        },
        {
          "key": "Accept-Ranges",
          "value": "bytes"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000"
        }
      ]
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|svg|ico|webp)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    }
  ]
}
